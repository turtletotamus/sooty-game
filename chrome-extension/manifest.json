{
  "manifest_version": 3,
  "name": "Sooty (小黑炭)",
  "description": "你的桌面小夥伴，在任何網頁右下角都能陪著你。",
  "version": "1.0.0",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Sooty 小黑炭"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["config.js", "content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ]
}
