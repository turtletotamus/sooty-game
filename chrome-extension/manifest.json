{
  "manifest_version": 3,
  "default_locale": "en",
  "name": "Sooty (小黑炭)",
  "description": "點圖示打開小黑炭視窗；右下角陪伴模式為同一隻小黑炭。",
  "version": "2.0.19",
  "permissions": [
    "storage",
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Sooty 小黑炭"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "config.js",
        "content.js"
      ],
      "css": [
        "content.css"
      ],
      "run_at": "document_idle"
    }
  ]
}
